<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fxgizmob.MainActivity$PlaceholderFragment" >
    <AbsoluteLayout 
        android:id="@+id/map_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <ImageView
            android:id="@+id/image_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/world_map" />

        <ImageButton
            android:id="@+id/btn_tokyo"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_x="485dp"
            android:layout_y="92dp"
            android:background="@drawable/flag_close_tokyo" />
        

         <ImageButton
            android:id="@+id/btn_sydney"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_x="507dp"
            android:layout_y="188dp"
            android:background="@drawable/flag_close_sydney" />
         
