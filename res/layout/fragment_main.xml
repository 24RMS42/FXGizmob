                android:layout_y="120dp"
                android:background="@drawable/flag_close_hongkong" />

            <ImageButton
                android:id="@+id/btn_shanghai"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_x="461dp"
                android:layout_y="106dp"
                android:background="@drawable/flag_close_shanghai" />

           	<ImageButton
           	    android:id="@+id/btn_dubai"
           	    android:layout_width="12dp"
           	    android:layout_height="12dp"
