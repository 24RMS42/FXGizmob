           	    android:layout_y="107dp"
           	    android:background="@drawable/flag_close_dubai" />

			<ImageButton
			    android:id="@+id/btn_moscow"
			    android:layout_width="12dp"
			    android:layout_height="12dp"
			    android:layout_x="337dp"
			    android:layout_y="56dp"
			    android:background="@drawable/flag_close_moscow" />

			<ImageButton
			    android:id="@+id/btn_johannesburg"
			    android:layout_width="12dp"
			    android:layout_height="12dp"
			    android:layout_x="313dp"
			    android:layout_y="162dp"
			    android:background="@drawable/flag_close_johannesburg" />

			<ImageButton
			    android:id="@+id/btn_toronto"
			    android:layout_width="12dp"
			    android:layout_height="12dp"
			    android:layout_x="145dp"
			    android:layout_y="75dp"
			    android:background="@drawable/flag_close_toronto" />

			<ImageButton
			    android:id="@+id/btn_newyork"
			    android:layout_width="12dp"
			    android:layout_height="12dp"
